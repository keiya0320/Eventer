<div class="top-message-1">
  <h2 class="text-center">Let's create Events!</h2>
</div>
<div class="new-event">
  <%= link_to "New Post", new_event_path, class:"btn btn-outline-warning btn-block"%>
</div>

<div class="top-message-2">
  <h3 class="text-center">イベント一覧(新着順)</h3>
</div>
<div class="row">
  <% @events.each do |event| %>
    <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.explanation %></p>
        <a href="#" class="btn btn-primary">Event details</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
